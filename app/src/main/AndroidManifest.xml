<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения на локацию -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Portal2AdaptiveSongs"
        tools:ignore="MissingApplicationIcon">

        <!-- Главная активность с Launcher intent-filter -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Portal2AdaptiveSongs">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".SettingsActivity" />
        <activity android:name=".AchievementsActivity" />
        <activity android:name=".StorageActivity" />
        <activity android:name=".HistoryActivity" />
        <activity
            android:name=".RouteSettingsActivity"
            android:exported="false"
            android:label="@string/settings_routes_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TimeAttackSettingsActivity"
            android:exported="false"
            android:label="@string/menu_time_attack"
            android:parentActivityName=".MainActivity" />

    </application>
</manifest>
