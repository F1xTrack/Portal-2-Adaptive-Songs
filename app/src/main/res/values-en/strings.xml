    <!-- EASY -->
    <string name="ta_E1_title">Warm-up</string>
    <string name="ta_E1_desc">Enter superspeed and hold ≥10 s. Total time limit — 2 min.</string>
    <string name="ta_E2_title">Smooth start</string>
    <string name="ta_E2_desc">Move for 60 s without entering superspeed.</string>
    <string name="ta_E3_title">First burst</string>
    <string name="ta_E3_desc">Within 60 s enter superspeed at least once and hold it ≥5 s.</string>
    <string name="ta_E4_title">Intervals 2×10</string>
    <string name="ta_E4_desc">2 cycles: 10 s normal → 10 s superspeed.</string>
    <string name="ta_E5_title">Half‑kilometer easy</string>
    <string name="ta_E5_desc">Cover 0.5 km in ≤8 min (modes don’t matter).</string>
    <string name="ta_E6_title">Fewer switches</string>
    <string name="ta_E6_desc">No more than 3 mode switches in 3 minutes.</string>
    <string name="ta_E7_title">Three pulses</string>
    <string name="ta_E7_desc">Do 3 superspeed entries ≥3 s each. Rest ≤45 s.</string>
    <string name="ta_E8_title">No stops</string>
    <string name="ta_E8_desc">4 minutes without stops (stops &gt;2 s are forbidden).</string>
    <string name="ta_E9_title">Smooth return</string>
    <string name="ta_E9_desc">SS ≥5 s, then normal ≥20 s.</string>
    <string name="ta_E10_title">Cadence 4×30</string>
    <string name="ta_E10_desc">2 minutes: roughly every 30 s a brief SS entry (≥2 s), total ≥4 times.</string>

    <!-- NORMAL -->
    <string name="ta_N1_title">Intervals 4×20</string>
    <string name="ta_N1_desc">4 cycles: 20 s normal → 20 s SS.</string>
    <string name="ta_N2_title">Reverse ladder</string>
    <string name="ta_N2_desc">SS 15 → N 20 → SS 20 → N 25 → SS 25.</string>
    <string name="ta_N3_title">Long hold</string>
    <string name="ta_N3_desc">Continuous superspeed ≥30 s.</string>
    <string name="ta_N4_title">Negative split 1 km</string>
    <string name="ta_N4_desc">1 km: the second half is ≥10% faster than the first.</string>
    <string name="ta_N5_title">Active six</string>
    <string name="ta_N5_desc">Within 6 minutes do ≥6 SS entries; total SS ≥90 s.</string>
    <string name="ta_N6_title">Anti‑jitter control</string>
    <string name="ta_N6_desc">2 minutes: no more than 1 switch per 10 s (≤12).
    </string>
    <string name="ta_N7_title">Near threshold</string>
    <string name="ta_N7_desc">2 minutes stay near the threshold; brief dips allowed.</string>
    <string name="ta_N8_title">Sprints 5×6</string>
    <string name="ta_N8_desc">5 SS entries ≥6 s; rests ≤30 s.</string>
    <string name="ta_N9_title">Kilometer with bursts</string>
    <string name="ta_N9_desc">1 km in ≤9 min and ≥2 SS segments ≥10 s.</string>
    <string name="ta_N10_title">Steady movement</string>
    <string name="ta_N10_desc">8 minutes without stops; ≤12 switches.</string>

    <!-- HARD -->
    <string name="ta_H1_title">Long hold‑2</string>
    <string name="ta_H1_desc">Continuous superspeed ≥60 s.</string>
    <string name="ta_H2_title">Fartlek 8×15</string>
    <string name="ta_H2_desc">8 cycles: 15 s SS / 15 s N.</string>
