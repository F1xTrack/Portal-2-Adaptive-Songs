    <string name="ta_H8_title">Recovery by the rules</string>
    <string name="ta_H8_desc">5 cycles: SS ≥8 s → then N ≥30 s.</string>
    <string name="ta_H9_title">Anti‑jitter</string>
    <string name="ta_H9_desc">5 minutes: no more than 1 switch per minute (≤5) and total SS ≥90 s.</string>
    <string name="ta_H10_title">Eight sprints</string>
    <string name="ta_H10_desc">Within 12 minutes do ≥8 SS entries ≥8 s; stops &gt;2 s are forbidden.</string>

