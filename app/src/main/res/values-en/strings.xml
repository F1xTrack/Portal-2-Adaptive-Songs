    <string name="ta_H3_desc">Within 10 minutes accumulate ≥180 s in SS.</string>
    <string name="ta_H4_title">Fast kilometer+</string>
    <string name="ta_H4_desc">1 km in ≤6 min and ≥30% of time in SS.</string>
    <string name="ta_H5_title">Half‑kilometer at pace</string>
    <string name="ta_H5_desc">0.5 km in ≤2:30; at least two SS segments ≥10 s.</string>
    <string name="ta_H6_title">10 precise switches</string>
    <string name="ta_H6_desc">Within 7 minutes perform exactly 10 SS↔N switches.</string>
    <string name="ta_H7_title">Ladder up</string>
