<?xml version="1.0" encoding="utf-8"?>
<!-- Карточка отдельного трека в списке -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/portal_card_bg">

    <!-- Основной контейнер с горизонтальной ориентацией -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Иконка трека (музыкальная нота) -->
        <ImageView
            android:id="@+id/iconTrack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_play"
            android:tint="@color/portal_orange"
            android:contentDescription="icon" />

        <!-- Контейнер с информацией о треке -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Название трека -->
            <TextView
                android:id="@+id/textTrackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название трека"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/portal_white"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Контейнер с дополнительной информацией (длительность и количество воспроизведений) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                
                <!-- Длительность трека -->
                <TextView
                    android:id="@+id/textTrackDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:45"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/portal_blue"
                    android:layout_marginEnd="12dp" />
                
                <!-- Количество воспроизведений трека -->
                <TextView
                    android:id="@+id/textTrackPlays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 прослушиваний"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/portal_orange" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 