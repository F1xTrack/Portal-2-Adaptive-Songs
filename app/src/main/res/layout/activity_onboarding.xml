<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChooseLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_language_button"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadSoundtracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_download_button"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_continue_button"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="false"
            android:progress="0"
            android:visibility="gone"
            android:contentDescription="@string/onboarding_downloading"
            app:trackThickness="4dp"
            app:trackCornerRadius="2dp"
            app:indeterminateAnimationType="disjoint"
            app:showDelay="150"
            app:minHideDelay="300"/>

    </LinearLayout>
</ScrollView>
